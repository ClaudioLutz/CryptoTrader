# .env.example - Copy to .env and fill in values
# NEVER commit .env to version control!

# ==============================================================================
# Exchange Configuration
# ==============================================================================
EXCHANGE__NAME=binance
EXCHANGE__API_KEY=your_api_key_here
EXCHANGE__API_SECRET=your_api_secret_here
EXCHANGE__TESTNET=true
EXCHANGE__RATE_LIMIT_MS=100
EXCHANGE__TIMEOUT_MS=30000

# ==============================================================================
# Database Configuration
# ==============================================================================
DB__URL=sqlite+aiosqlite:///./trading.db
DB__ECHO=false
DB__POOL_SIZE=5

# ==============================================================================
# Trading Configuration
# ==============================================================================
TRADING__SYMBOL=BTC/USDT
TRADING__DRY_RUN=true
TRADING__MAX_POSITION_PCT=0.1

# ==============================================================================
# Risk Management
# ==============================================================================
RISK__MAX_POSITION_PCT=0.20
RISK__MAX_DAILY_LOSS_PCT=0.05
RISK__MAX_DRAWDOWN_PCT=0.15
RISK__RISK_PER_TRADE_PCT=0.02
RISK__MAX_CONSECUTIVE_LOSSES=5

# ==============================================================================
# Alerting Configuration (optional but recommended)
# ==============================================================================
# Telegram Bot - Get from @BotFather on Telegram
# TELEGRAM__BOT_TOKEN=your_bot_token
# TELEGRAM__CHAT_ID=your_chat_id

# Discord Webhook - Create from Server Settings > Integrations
# DISCORD__WEBHOOK_URL=your_webhook_url

# ==============================================================================
# Health Check Server
# ==============================================================================
HEALTH__HOST=0.0.0.0
HEALTH__PORT=8080

# ==============================================================================
# Logging Configuration
# ==============================================================================
LOG_LEVEL=INFO
LOG_JSON=true
LOG_FILE=logs/trading.log

# ==============================================================================
# Security Notes
# ==============================================================================
# 1. NEVER enable withdrawal permission on your API key
# 2. Enable IP whitelisting in your exchange API settings
# 3. Use a dedicated API key for this bot only
# 4. Rotate API keys every 3-6 months
# 5. Start with testnet=true until you're confident
